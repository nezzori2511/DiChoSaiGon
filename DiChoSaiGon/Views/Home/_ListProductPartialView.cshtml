@model List<Product>
@*@using PagedList.Core.Mvc

    @model PagedList.Core.IPagedList<DiChoSaiGon.Models.Product>*@
@if (Model != null && Model.Count() > 0)
{

<div class="row">
    <div class="col-lg-12">
        <div class="swiper-container product-slider swiper-arrow with-radius border-issue">
            <div class="swiper-wrapper">
                @foreach (var item in Model)
                {
                    string url = $"/{item.Alias}-{item.ProductId}.html";
                    <div class="swiper-slide">
                        <div class="blog-item">
                            <div class="blog-img img-zoom-effect">
                                <a href="@url">

                                    <img class="img-full" src="~/images/products/@item.Thumb" alt="@item.Title">
                                </a>
                                <div class="product-add-action">
                                    <ul>
                                        <li>
                                            <a href="cart.html">
                                                <i class="pe-7s-cart"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="product-content">
                                <a class="product-name" href="@url">@item.ProductName</a>
                                <div class="price-box pb-1">
                                    <span class="new-price">@item.Price.Value.ToString("#,##0") VNĐ</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>
            <!-- Add Arrows -->
            @if (Model.Count > 3)
            {
                <div class="swiper-nav-wrap">
                    <div class="swiper-button-next"></div>
                </div>
                <div class="swiper-button-prev"></div>
            }

        </div>
    </div>
    @* <div aria-label="Page navigation example">
            <ul class="pagination">
                <pager class="pager-container" list="ViewBag.TinDang" asp-controller="Home" asp-action="Index" />

            </ul>

        </div>*@
</div>
}
